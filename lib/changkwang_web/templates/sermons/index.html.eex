        <h2 id="sermon-date" class="leading-6 text-blue-600 font-semibold tracking-wide uppercase"><%= @latest.date  %></h2>
        <h3 id="sermon-title" class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl"><%= @latest.title %></h3>
     
        <div class="mt-20 bg-white overflow-hidden shadow rounded-lg">
          <div id="video-parent" class="px-4 py-5 sm:p-6 h-500">
            <!-- Content goes here -->
            <embed id="sermon-video" width="460" height="315" src="https://www.youtube.com/embed/<%= @latest.share_code %>" frameborder="0" allow="fullscreen accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></embed> 
          </div>
        </div>
      </div>
  </div>

<script>
  function changeSermon(title, date, link) {
    var dateElm = document.getElementById("sermon-date");
    dateElm.textContent = date;

    var titleElm = document.getElementById("sermon-title");
    titleElm.textContent = title;

    var sermonVideoElm = document.getElementById("sermon-video");
    //sermonVideoElm.attributes.src = 

    var parent = document.getElementById("video-parent");
    parent.removeChild(sermonVideoElm);
      
    var newSermonVideoElm = document.createElement("embed");     
    newSermonVideoElm.id = "sermon-video";
    newSermonVideoElm.width = "460";
    newSermonVideoElm.height = "315";
    newSermonVideoElm.src = "https://www.youtube.com/embed/" + link;
    
    parent.appendChild(newSermonVideoElm);


  }
</script>