                <button onclick="changeSermon('<%= sermon.title %>','<%= sermon.date %>', '<%= sermon.share_code %>' )">
                  <%= sermon.title %>
                </button>
                </td>
                <td class="w-1/4 px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= sermon.date %>
                </td>
              </tr>

             <% end %>
          </tbody>
        </table>

